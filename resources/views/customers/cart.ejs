<section class="cart py-16">
  <% if(session.cart) { %>
  <div class="order container mx-auto w-1/2">
    <div class="flex items-center border-b border-gray-300 pb-4">
      <img src="/img/cart-black.png" alt="" />
      <h1 class="font-bold ml-4 text-2xl">Danh sách sản phẩm</h1>
    </div>

    <div class="pizza-list">
      <% for(let pizza of Object.values(session.cart.items)) { %>
      <div class="flex items-center my-8">
        <img class="w-24" src="/img/<%= pizza.item.image %>" alt="" />
        <div class="flex-1 ml-4">
          <h1><%= pizza.item.name %></h1>
          <span><%= pizza.item.brand %></span>
        </div>
        <span class="flex-1"><%= pizza.qty %> Pcs</span>
        <span class="font-bold text-lg"
          >$<%= pizza.item.price * pizza.qty%></span
        >
      </div>
      <% } %>
    </div>

    <hr />
    <div>
      <div class="text-right py-4">
        <span class="text-lg font-bold">Tổng tiền:</span>
        <span class="amount text-2xl font-bold"
          >$<%= session.cart.totalPrice %></span
        >
        <div>
          <% if (user) { %>
          <form method="POST" class="mt-12" action="/orders">
            <input
              name="phone"
              placeholder="Phone number..."
              class="border border-gray-400 p-2 w-1/2 mb-4"
              type="text"
            />

            <input
              name="address"
              placeholder="Address..."
              class="border border-gray-400 p-2 w-1/2"
              type="text"
            />
            <div>
              <button
                class="mt-6 btn-primary px-6 py-2 rounded-full text-white font-bold"
                type="submit"
              >
                Đặt ngay
              </button>
            </div>
          </form>
        </div>
        <% } else { %>

        <a
          href="login"
          class="inline-block cursor-pointer px-6 mt-6 btn-primary px-6 py-2 rounded-full text-white font-bold"
          >Đăng nhâp để tiếp tục...</a
        >
        <% } %>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="empty-cart py-16">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold mb-2">Không có sản phẩm nào</h1>
      <p class="text-gray-500 text-lg mb-12">
        Dỏ hàng đang trống vui lòng quay lại mua hàng ...
      </p>
      <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart" />
      <a
        href="/"
        class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12"
        >Quay lại</a
      >
    </div>
  </div>
  <% } %>
</section>
